<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.CNFloWopen.niugou.dao.ProductSellDailyDao">
    <resultMap id="productSellDailyResultMap" type="com.CNFloWopen.niugou.entity.ProductSellDaily">
        <result column="create_time" property="createTime"/>
        <result column="total" property="total"/>
        <association property="product" column="product_id" javaType="com.CNFloWopen.niugou.entity.Product">
            <id column="product_id" property="productId"/>
            <result column="product_name" property="productName"/>
        </association>
        <association property="shop" column="shop_id" javaType="com.CNFloWopen.niugou.entity.Shop">
            <id column="shop_id" property="shopId"/>
            <result column="shop_name" property="shopName"/>
        </association>
    </resultMap>


    <select id="queryProductSellDailyList" resultMap="productSellDailyResultMap">
        select
        psd.create_time,
        s.shop_id,
        s.shop_name,
        p.product_id,
        p.product_name
        from
        tb_product_sell_daily psd,
        tb_shop s,
        tb_product p
        <where>
            psd.shop_id = s.shop_id and
            psd.product_id = p.product_id
            <!--按店铺查询-->
            <if test="productSellDailyCondition.shop!=null and
            productSellDailyCondition.shop.shopId!=null">
                and psd.shop_id = #{productSellDailyCondition.shop.shopId}
            </if>
            <!--按商品名进行模糊查询-->
            <if test="productSellDailyCondition.product!=null and
            productSellDailyCondition.product.productName!=null">
                and p.product_name like '%${productSellDailyCondition.product.productName}%'
            </if>
            <if test="beginTime!=null and endTime!=null">
                and psd.create_time between #{beginTime} and #{endTime};
            </if>
            <!--&gt; 是大于号-->
            <if test="beginTime!=null and endTime==null">
                and psd.create_time &gt;=#{beginTime}
            </if>
            <!--&lt; 是小于号-->
            <if test="beginTime==null and endTime!=null">
                and psd.end_time &lt;=#{endTime}
            </if>
        </where>
    </select>
    <insert id="insertProductSellDaily" parameterType="com.CNFloWopen.niugou.entity.ProductSellDaily">
        insert into tb_product_sell_daily(
        <!--统计每个店铺的日销量-->
        select product_id,shop_id,create_time,count(product_id) AS total from tb_user_product_map
        where date_format(create_time,'%Y-%m-%d') = date_sub(curdate(),interval 1
        day) group by product_id)
    </insert>
</mapper>